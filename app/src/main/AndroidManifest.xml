<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.bluejack19_2.HelepDoc" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/resized_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.SettingsActivity"/>
        <activity
            android:name="edu.bluejack19_2.HelepDoc.NavigatorActivity"
            android:label="@string/title_activity_navigator"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name="edu.bluejack19_2.HelepDoc.ChatDetailActivity" />
        <activity android:name="edu.bluejack19_2.HelepDoc.ChatActivity" />
        <activity android:name="edu.bluejack19_2.HelepDoc.CartActivity" />
        <activity android:name="edu.bluejack19_2.HelepDoc.ProductDetail" />
        <activity android:name="edu.bluejack19_2.HelepDoc.ProductPage" />
        <activity android:name="edu.bluejack19_2.HelepDoc.MainActivity" >

        </activity>
        <activity android:name=".main.ViewTransactionActivity" />
        <activity android:name=".main.ProfileActivity" />
        <activity android:name=".main.DoctorActivity" />
        <activity android:name=".main.HomeActivity"></activity>
        <activity android:name="edu.bluejack19_2.HelepDoc.auth.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.bluejack19_2.HelepDoc.auth.RegisterActivity">
        </activity>
        <service android:name="edu.bluejack19_2.HelepDoc.notifications.MyFirebaseIdService"
            android:enabled="true"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_EVENT"/>
            </intent-filter>

        </service>
        <service android:name="edu.bluejack19_2.HelepDoc.notifications.MyFirebaseMessaging"
            android:enabled="true"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGE_EVENT"/>
            </intent-filter>

        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>